# ---------------------------------------------------------------------------
# Prometheus scrape targets (YAML list format for envsubst)
# e.g. ["192.168.1.10:9100", "192.168.1.11:9100"]
# ---------------------------------------------------------------------------
NODE_EXPORTER_TARGETS=["192.168.x.x:9100","192.168.x.x:9100"]
CADVISOR_TARGETS=["192.168.x.x:8080","192.168.x.x:8080"]
# Note: exclude LXC containers from cadvisor targets â€” no Docker daemon
K8S_NODE_EXPORTER_TARGETS=["192.168.x.x:9100","192.168.x.x:9100"]

