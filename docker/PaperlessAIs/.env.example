# ==================================================
# Paperless (k3s â€“ authoritative)
# ==================================================
PAPERLESS_URL=https://paperless.yourdomain.com
PAPERLESS_BASE_URL=https://paperless.yourdomain.com
PAPERLESS_API_URL=https://paperless.yourdomain.com/api
PAPERLESS_API_TOKEN=xxxxxxxxxxxxxxxxxxxxxxxxxxxx
PAPERLESS_USERNAME=user

# ==================================================
# Ollama (existing Docker container)
# ==================================================
OLLAMA_HOST=http://open-webui:11434
OLLAMA_API_URL=http://open-webui:11434

# ==================================================
# Paperless-GPT (expects these EXACT names)
# ==================================================
LLM_PROVIDER=ollama
LLM_MODEL=llama3.2:3b
LLM_LANGUAGE=English

VISION_LLM_PROVIDER=ollama
VISION_LLM_MODEL=minicpm-v:8b

OCR_PROVIDER=llm
OLLAMA_CONTEXT_LENGTH=8192
TOKEN_LIMIT=1000

AUTO_OCR_TAG=paperless-gpt-ocr-auto
AUTO_TAG=paperless-gpt-auto
MANUAL_TAG=paperless-gpt-manual
PDF_OCR_COMPLETE_TAG=paperless-gpt-ocr-complete

PDF_OCR_TAGGING=true
PDF_UPLOAD=false

# ==================================================
# Paperless-AI (different variable names)
# ==================================================
AI_PROVIDER=ollama
OLLAMA_MODEL=llama3.2:3b
SCAN_INTERVAL=*/30 * * * *
RAG_SERVICE_ENABLED=false

# ==================================================
# Paths
# ==================================================
DOCKER_DATA_ROOT=/srv/paperless-ais

PAPERLESS_AI_DATA=${DOCKER_DATA_ROOT}/paperless-ai
PAPERLESS_GPT_PROMPTS=${DOCKER_DATA_ROOT}/paperless-gpt/prompts

# ==================================================
# Ports (avoid collisions)
# ==================================================
PAPERLESS_AI_PORT=3100
PAPERLESS_GPT_PORT=3102

# ==================================================
# Misc
# ==================================================
TZ=Australia/Sydney
LOG_LEVEL=DEBUG
